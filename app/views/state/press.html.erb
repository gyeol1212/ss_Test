<h1>현황관리</h1>

<div>
  <h2 style="margin-left: 20px">1. 업무성과</h2>

  <div>
    <h3 style="margin-left: 40px">4. 언론보도</h3>
    <%= render 'prtable', company: @company %>
    <%= form_for @press do |f| %>
      <span>입력일은 자동 생성</span>
      <%= f.date_field :when , required: true, style:"width:150px" %>
      <%= f.text_field :press_name , required: true, style:"width:100px", placeholder: "언론사명 작성" %>
      <%= f.text_field :title , required: true, style:"width:100px", placeholder: "제목 작성"  %>
      <%= f.text_field :link, required: true, style:"width:100px", placeholder: "링크 작성"  %>
      <%= f.file_field :related_file, required: true, style:"width:170px" %>
      <%= f.text_field :bigo, style:"width:100px", placeholder: "비고 작성" %>
      <%= f.hidden_field :company, value: @company.id %>
      <%= f.submit "작성", class:"btn btn-primary" %>
    <% end %>
  </div>
</div>