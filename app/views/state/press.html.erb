<div class="h2 text-center"><%= link_to "현황관리", state_path(@company.id)%> > <span class="h3"> 업무성과</span></div>

<div>
  <div class="h3">4. 언론보도</div>
    <%= render 'prtable', company: @company %>
    <table class="table " style="margin-top: 100px">
    <thead>
    <tr>
    <th>입력일</th>
    <th>보도일</th>
    <th>언론사명</th>
    <th>제목</th>
    <th>링크</th>
    <th>관련자료</th>
    <th colspan="2">비고</th>
    <th></th>
  </tr>
  </thead>
    <tbody>
    <%= form_for @press, :html => {:id => 'press'},:authenticity_token => false do |f| %>
      <td>입력일은 자동 생성</td>
      <td><%= f.date_field :when , required: true, style:"width:150px", form: 'press'%></td>
      <td><%= f.text_field :press_name , required: true, style:"width:100px", placeholder: "언론사명 작성", form: 'press'%></td>
      <td><%= f.text_field :title , required: true, style:"width:100px", placeholder: "제목 작성" , form: 'press'%></td>
      <td><%= f.text_field :link, required: true, style:"width:100px", placeholder: "링크 작성" , form: 'press'%></td>
      <td><%= f.file_field :related_file, style:"width:170px", form: 'press'%></td>
      <td><%= f.text_field :bigo, style:"width:100px", placeholder: "비고 작성", form: 'press'%></td>
      <td><%= f.hidden_field :company, value: @company.id, form: 'press'%></td>
      <td><%= f.submit "작성", class:"btn btn-primary", form: 'press'%></td>
    
    <% end %>
    </tbody>
  </table>
</div>