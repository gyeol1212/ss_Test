<table class="table" style="margin-top: 20px">
  <thead>
  <tr>
    <th>입력일</th>
    <th>날짜</th>
    <th>성과내용</th>
    <th>관련자료</th>
    <th>비고</th>
  </tr>
  </thead>
  
    <% if company.achievements.length > 0 %>
    <tbody>
      <% company.achievements.each do |achievement| %>
      <tr>
        <td><%= achievement.created_at.to_s[0,10] %></td>
        <td><%= achievement.when.to_s[0,10] %></td>
        <td><%= achievement.content %></td>
        <td>
          <% if achievement.related_file.attachment != nil %>
            <a class="m-0 btn btn-outline-info" href="<%= achievement.related_file.service_url %>" target="_blank">보기</a>
          <% else %>
            <a class="m-0 btn btn-outline-info disabled" ><del>보기</del></a>
          <% end %>
        </td>
        <td><%= achievement.bigo %></td>
        </tr>
      <% end %>
      </tbody>
    <% else %>
      <tbody>
      <td colspan="5" class="text-center">기타 성과가 없습니다!</td>
      </tbody>
    <% end %>
</table>