<%= form_for(company) do |f|%>
    
    <div class="form-row">
        <div class="form-group form-row col-md-6">
            <div class="col-md-1"></div>
            <%= f.label :"기수", class: "col-md-3 p-2"%>
            <%= f.number_field :season, class: "form-control col-md-7", required: true %>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group form-row col-md-6">
            <%= f.radio_button :name, true, class: "d-block mt-3 col-md-1"%>
            <%= f.label :"상호", class: "col-md-3 p-2"%>
            <%= f.text_field :name, class: "form-control  col-md-7" , required: true %>
        </div>
        <div class="form-group form-row col-md-6">
            <%= f.radio_button :name, true, class: "d-block mt-3 col-md-1"%>
            <%= f.label :"상호(영문)", class: "col-md-3 p-2"%>
            <%= f.text_field :name_en, class: "form-control  col-md-7", pattern: "[A-Za-z0-9]+"  %>
        </div>            
    </div>

    <div class="form-row">
        <div class="form-group form-row col-md-6">
            <%= f.radio_button :name, true, class: "d-block mt-3 col-md-1"%>
            <%= f.label :"서비스명", class: "col-md-3 p-2"%>
            <%= f.text_field :service_name, class: "form-control  col-md-7" %>
        </div>            
        <div class="form-group form-row col-md-6">
            <%= f.radio_button :name, true, class: "d-block mt-3 col-md-1"%>
            <%= f.label :"서비스명(영문)", class: "col-md-3 p-2"%>
            <%= f.text_field :service_name_en, class: "form-control  col-md-7", pattern: "[A-Za-z0-9]+"  %>
        </div>
    </div>

    <div class="form-row mb-3">
        <p style="color: gray;"> * 대표 상호 / 서비스 명으로 원하는 쪽에 체크해주세요!</p>
    </div>    

    <div class="form-row">
        <div class="form-group form-row col-md-12" v-if='user_level === "true"'>
            <%= f.label :"식별번호", class: "col-md-4"%>
            <%= f.number_field :uniq_num, class: "form-control  col-md-8", required: true %>
        </div>
    
        <div class="form-group form-row col-md-12">
            <%= f.label :"기업 로고", class: "col-md-4"%>
            <%= f.file_field :logo, accept: '.jpg , .jpeg , .png', class: "col-md-8"%>
        </div>
    </div>
    
    <div class="form-row">
        <div class="form-group form-row col-md-6">
            <%= f.label :"대표자 수", class: "col-md-4  p-2"%>
            <%= f.select(:CEO_num, [1,2,3,4,5], {}, { :class => 'form-control col-md-8 대표자수', "v-model": "ceo_num" }) %>
        </div>
    </div>
    <div id="대표자1" class="form-row">
        <div class="form-group form-row col-md-6">
            <%= f.label :"대표자명", class:"col-md-4 p-2"%>
            <%= f.text_field :CEO1 , class: "form-control  col-md-8", required: true %>
        </div>
        <div class="form-group form-row col-md-6">
            <%= f.label :"대표자명(영문)", class:"col-md-4 text-center p-2"%>
            <%= f.text_field :CEO1_en , class: "form-control  col-md-8", required: true %>
        </div>
    </div>
    <div id="대표자2" class="form-row" v-if="ceo_num >= 2">
        <div class="form-group form-row col-md-6">
            <%= f.label :"대표자명", class:"col-md-4 p-2"%>
            <%= f.text_field :CEO2 , class: "form-control  col-md-8", required: true %>
        </div>
        <div class="form-group form-row col-md-6">
            <%= f.label :"대표자명(영문)", class:"col-md-4 text-center  p-2"%>
            <%= f.text_field :CEO2 , class: "form-control  col-md-8", required: true %>
        </div>
    </div>
    <div id="대표자3" class="form-row" v-if="ceo_num >= 3">
        <div class="form-group form-row col-md-6">
            <%= f.label :"대표자명", class:"col-md-4 p-2"%>
            <%= f.text_field :CEO3 , class: "form-control  col-md-8", required: true %>
        </div>
        <div class="form-group form-row col-md-6">
            <%= f.label :"대표자명(영문)", class:"col-md-4 text-center  p-2"%>
            <%= f.text_field :CEO3 , class: "form-control  col-md-8", required: true %>
        </div>
    </div>
    <div id="대표자4" class="form-row" v-if="ceo_num >= 4">
        <div class="form-group form-row col-md-6">
            <%= f.label :"대표자명", class:"col-md-4 p-2"%>
            <%= f.text_field :CEO4 , class: "form-control  col-md-8", required: true %>
        </div>
        <div class="form-group form-row col-md-6">
            <%= f.label :"대표자명(영문)", class:"col-md-4 text-center  p-2"%>
            <%= f.text_field :CEO4 , class: "form-control  col-md-8", required: true %>
        </div>
    </div>
    <div id="대표자5" class="form-row" v-if="ceo_num >= 5">
        <div class="form-group form-row col-md-6">
            <%= f.label :"대표자명", class:"col-md-4 p-2"%>
            <%= f.text_field :CEO5 , class: "form-control  col-md-8", required: true %>
        </div>
        <div class="form-group form-row col-md-6">
            <%= f.label :"대표자명(영문)", class:"col-md-4 p-2"%>
            <%= f.text_field :CEO5 , class: "form-control  col-md-8", required: true %>
        </div>
    </div>
    

    <div class="form-row">
        <div id="isRegistered" class="form-group form-row col-md-4 text-center">
            <%= f.label :"사업자등록여부", class: "col-md-4 p-2"%>
            <label class="col-md-2"><%= f.radio_button :is_registered, true, "v-model" => "corp_register" %>Y</label>
            <label class="col-md-2"><%= f.radio_button :is_registered, false, "v-model" => "corp_register" %>N</label>
        </div>
    </div>
    <div class="form-row" v-if="corp_register === 'true'">
        <div class="form-group form-row col-md-4">
            <%= f.label :"사업자 종류", class: "col-md-4 p-2"%>
            <%= f.select(:is_individual, [['개인 사업자',true], ['법인 사업자',false]], {}, { :class => 'form-control col-md-8', "v-model": "is_individual"}) %>
        </div>
        <div class="form-group form-row col-md-8" v-if="is_individual === 'true'">
            <%= f.label :"사업자 번호", class: "col-md-3 p-2 text-center"%>
            <%= f.number_field :register_num, class: "form-control col-md-2" %> - 
            <%= f.number_field :register_num, class: "form-control col-md-2" %> - 
            <%= f.number_field :register_num, class: "form-control col-md-2" %> 
        </div>
        <div class="form-group form-row col-md-8" v-if="is_individual === 'false'">
            <%= f.label :"사업자 번호", class: "col-md-4 p-2 text-center"%>
            <%= f.number_field :register_num, class: "form-control col-md-3" %> - 
            <%= f.number_field :register_num, class: "form-control col-md-3" %>
        </div>
    </div>
       
    
    <div class="form-row"  v-if="corp_register === 'true'">
        <div class="form-group form-row col-md-4">
                <%= f.label :"사업자 등록일", class: "col-md-4 p-2"%>
                <%= f.date_field :corporated_date, class: "form-control col-md-8", required: true   %>
        </div>
        <div class="form-group form-row col-md-4">
                <%= f.label :"업태명", class: "col-md-4 p-2 text-center"%>
                <%= f.text_field :up_tae, class: "form-control col-md-8", required: true  %>
        </div>
        <div class="form-group form-row col-md-4">
                <%= f.label :"종목명", class: "col-md-4 p-2 text-center"%>
                <%= f.text_field :jong_mok1, class: "form-control col-md-8", required: true  %>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group form-row col-md-6">
                <%= f.label :"창업 시작일", class: "col-md-4 p-2"%>
                <%= f.date_field :start_date, class: "form-control col-md-8", required: true   %>
        </div>
        <div class="form-group form-row col-md-6">
                <%= f.label :"입주날짜", class: "col-md-4 p-2 text-center"%>
                <%= f.date_field :move_in_date, class: "form-control col-md-8", required: true   %>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group form-row col-md-6">
            <%= f.label :"졸업/퇴주", class: "col-md-4 p-2"%>
            <%= f.select(:move_out_date, ['졸업 날짜', '퇴주 날짜'], {}, { :class => 'form-control col-md-8',"v-model" => "graduate_or_out" }) %>
        </div>
        <div class="form-group form-row col-md-6">
                <label class="col-md-4 p-2 text-center">{{graduate_or_out}}</label>
                <%= f.date_field :move_out_date, class: "form-control col-md-8", required: true   %>
        </div>
    </div>
        

       
    
    
    
        <div class="form-group form-row">
            <%= f.label :"소재지 : 서울특별시 성북구 안암로 145 고려대학교 경영대학 본관 2층", class: "p-2"%>
            <%= f.number_field :address , class: "form-control col-md-1", required: true %><%= f.label :"호", class: "p-2"%>
        </div>
   
    <div class="form-row">
        <div class="form-group form-row col-md-6">
            <%= f.label :"사업자 등록증", class: "d-block col-md-4 p-2 "%>
            <%= f.file_field :express_file, accept: ".pdf" ,class: "col-md-8"%>
        </div>
    </div>
    <div class="form-row" v-if="is_individual === 'false'">
        <div class="form-group form-row col-md-6">
            <%= f.label :"법인 등기부 등본", class: "d-block col-md-4 p-2"%>
            <%= f.file_field :express_file, accept: ".pdf",class: "col-md-8" %>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group form-row col-md-4">
            <%= f.label :"대표 전화", class: "col-md-4 p-2 text-center"%>
            <%= f.number_field :phone_num, class: "form-control col-md-8" %>
        </div>
        <div class="form-group form-row col-md-4">
            <%= f.label :"대표 이메일", class: "col-md-4 p-2 text-center"%>
            <%= f.text_field :email, class: "form-control col-md-8" %>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group form-row col-md-4">
            <%= f.label :"연락용 휴대폰", class: "col-md-4 p-2"%>
            <%= f.number_field :cellphone_num, class: "form-control col-md-8", required: true  %>
        </div>
        <div class="form-group form-row col-md-4">
            <%= f.label :"웹사이트 (선택)", class: "col-md-4 p-2"%>
            <%= f.text_field :website, class: "form-control col-md-8" %>
        </div>
        <div class="form-group form-row col-md-4 text-center">
            <%= f.label :"SNS (선택)", class: "col-md-4 p-2"%>
            <%= f.text_field :sns, class: "form-control col-md-8" %>
        </div>
    
    </div>
    <div class="form-row">
        <div class="form-row form-group col-md-6">
            <%= f.label :"경영대생 유무", class: "col-md-4 p-2"%>
            <label class="col-md-2"><%= f.radio_button :is_business_student, true%>Y</label>
            <label class="col-md-2"><%= f.radio_button :is_business_student, false %>N</label>
        </div>
    </div>
    <div class="form-group form-row">
        <%= f.label :"기업 개요 (최대 500자)"%>
        <%= f.text_area :company_overview , class: "form-control", required: true, rows: "5",maxlength: "500" %>
    </div>
    <div class="form-group form-row">
        <%= f.label :"서비스 개요 (최대 500자)"%>
        <%= f.text_area :service_overview, class: "form-control", required: true, rows: "5",maxlength: "500"  %>
    </div>
        
    <div class="form-group form-row col-md-6">
        <%= f.label :"발표자료(pdf, ppt, pptx 파일)", class: "d-block"%>
        <%= f.file_field :presentation, accept: ".pdf , .ppt , .pptx" %>
    </div>
    
    <div>
        <%= f.submit "제출", class: "btn btn-light" %>
    </div>
<% end %>


<script>

    $("#isRegistered").change(() => {
        if($('input[name="company[isRegistered]"]:checked').val() === 'false'){
            $("#company_register_num").attr("disabled", "disabled")
            $("#company_register_num").val("")
        } else {
            $("#company_register_num").removeAttr("disabled")
        }
    })

    $("#isCorporated").change(() => {
        if($('input[name="company[isCorporated]"]:checked').val() === 'false'){
            $("#company_corporated_num").attr("disabled", "disabled")
            $("#company_corporated_num").val("")
            $("#company_corporated_date").attr("disabled", "disabled")
            $("#company_corporated_date").val("")
        } else {
            $("#company_corporated_num").removeAttr("disabled")
            $("#company_corporated_date").removeAttr("disabled")
        }
    })

    
</script>